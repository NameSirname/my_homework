### <!!!>
"NOTES, dummy"
[[
...<some prog>... 2>&1  -- перенаправить вывод программы ('>') из STDERR ('2') в STDOUT ('1') 
('&' добавляется специально перед источнихом выхода, т.к. это '1')
(также возможно 'output >/dev/null' (уже без '&'), nlg)

sudo gpasswd -a $USER input -- добавить пользователя '$USER' в группу 'input'

echo $XDG_SESSION_TYPE -- узнать формат сессии (x11 или wayland)

sed -i 's/^[ \t]*//' ~/.bash_history -- убрать все табы и пробелы в начале каждой строки
]]
